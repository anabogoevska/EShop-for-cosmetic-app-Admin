@{
}


@model EShopAppAdmin.Models.Order

<div class="container">

    <p>
        <a class="btn btn-warning">@Model.User.Email - @Model.User.FirstName @Model.User.LastName</a>
    </p>

    @for (int i = 0; i < Model.ProductInOrders.Count(); i++)
    {
        var item = Model.ProductInOrders.ElementAt(i);

        if (i % 3 == 0)
        {
            @:<div class="row">
            }

            <div class="col-md-3 m-4">
                <div class="card" style="width: 20rem; height: 35rem;">
                    <img class="card-img-top" src="@item.Product.ProductImage" style="height: 50%;" alt="Image for product!">

                    <div class="card-body">
                        <h3 class="card-title">@item.Product.ProductName</h3>
                        <p class="card-text">@item.Product.ProductDescription</p>


                        <h6>Price: $@item.Product.ProductPrice</h6>
                        <h6>Quantity: @item.Quantity</h6>
                        <h6>Total: $@(item.Product.ProductPrice * item.Quantity)</h6>
                    </div>

                </div>
            </div>


            if (i % 3 == 2)
            {
            @:</div>
        }
    }

</div>