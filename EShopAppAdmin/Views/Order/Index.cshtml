@model List<EShopAppAdmin.Models.Order>

<style>



    #grad {
        @* background-image: linear-gradient(to right, #F4C058,#ECA1BD,#6EE9E3);*@
        background-image: linear-gradient(to right, #facf7a,#ECA1BD,#6EE9E3);
    }

    th {
        color: white;
        background-color: #dc3545;
    }

    td {
        color: #de594e;
        background-color: #fce7e1;
        font-weight: bold;
    }

    #thead-dark {
        color: white;
        background-color: #dc3545;
    }
</style>

<div class="container" style="margin-top: -200px; margin-left: -7px;">
    <div id="grad" style=" height: 1700px; margin-top: -62px; width: 1541px; margin-left: -215px; margin-right: -210px;">
        @* <div class="container"> *@

        <div class="row" style="margin-bottom: 270px; margin-left: 112px; margin-top: 120px; margin-bottom: 20px; margin-left: 110px;">
            <b>  <a class="btn btn-outline-danger" asp-controller="Order" asp-action="ExportAllOrders" style=" margin-top: 120px;">Export Orders</a></b>
        </div>

        @*class="table mt-5" *@
        <table class="table mt-5" style="width: 1290px; margin-left: 110px; width: 1290px; margin-left: 110px;">
            <thead id="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Costumer Details</th>
                    <th scope="col">Number of products</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model[i];

                    <tr>
                        <th scope="row">@(i+1)</th>
                        <td>@item.User.Email - @item.User.FirstName  @item.User.LastName</td>
                        <td>@item.ProductInOrders.Count()</td>
                        <td><a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a></td>
                        <td><a class="btn btn-outline-primary" asp-action="CreateInvoice" asp-route-id="@item.Id">Create Invoice</a></td>
                    </tr>

                }
            </tbody>


        </table>

    </div>
</div>
